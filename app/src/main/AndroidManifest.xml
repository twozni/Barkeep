<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tmwdevelopments.barkeep">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CocktailListActivity"
            android:label="@string/title_cocktail_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".CocktailDetailActivity"
            android:label="@string/title_cocktail_detail"
            android:parentActivityName=".CocktailListActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tmwdevelopments.barkeep.CocktailListActivity" />
        </activity>
    </application>

</manifest>
